<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ak.app.mapper.AkMapper">
<select id="중복체크" resultType="ak.app.entity.회원">
select * from 회원테이블 where 아이디=#{아이디}
</select>
<select id="AkLists" resultType="ak.app.entity.회원">
select * from 회원테이블 order by idx desc
</select>
<insert id="Insert" parameterType="ak.app.entity.회원">
INSERT INTO 회원테이블 (소속, 부서, 이름) VALUES (#{소속}, #{부서}, #{이름})
</insert>

<select id="Login" parameterType="ak.app.entity.회원" resultType="ak.app.entity.회원">
select * from 회원테이블 where 아이디=#{아이디} and 패스워드=#{패스워드})
</select>
</mapper>